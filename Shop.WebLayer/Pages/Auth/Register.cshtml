@page
@model Shop.WebLayer.Pages.Auth.RegisterModel
@{

}


<body>
<!-- Login Wrapper Area-->
    <div class="login-wrapper d-flex align-items-center justify-content-center text-center">
        <!-- Background Shape-->
        <div class="background-shape"></div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-sm-9 col-md-7 col-lg-6 col-xl-5">
                    <img class="big-logo" src="img/core-img/logo-white.png" alt="">
                    <!-- Register Form-->
                    <div class="register-form mt-5 px-4">
                        <form method="post">
                            <div class="form-group text-right mb-4">
                                <span>نام کاربری</span>
                                <label for="UserName"><i class="lni lni-user"></i></label>
                                <input asp-for="UserName" class="form-control" id="UserName" type="text" placeholder="Designing World">
                                <span asp-validation-for="UserName"></span>
                            </div>
                            <div class="form-group text-right mb-4">
                                <span>ایمیل</span>
                                <label for="Email"><i class="lni lni-envelope"></i></label>
                                <input asp-for="Email" class="form-control" id="Email" type="email" placeholder="help@example.com">
                                <span asp-validation-for="Email"></span>
                            </div>
                            <div class="form-group text-right mb-4">
                                <span>رمز عبور</span>
                                <label for="Password"><i class="lni lni-lock"></i></label>
                                <input asp-for="Password" class="input-psswd form-control" id="Password" type="password" placeholder="********************">
                                <span asp-validation-for="Password"></span>
                            </div>
                            <button class="btn btn-success btn-lg w-100" type="submit">ثبت نام</button>
                        </form>
                    </div>
                    <!-- Login Meta-->
                    <div class="login-meta-data">
                        <p class="mt-3 mb-0">قبلا ثبت نام کرده اید؟<a class="ml-1" asp-page="Login">ورود</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
<!-- All JavaScript Files-->
    <partial name="Shared/_ValidationScriptsPartial"></partial>
</body>